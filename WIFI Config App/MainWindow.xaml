<Window x:Class="WIFI_Config_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WIFI_Config_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024" Closing="Window_Closing" Loaded="Window_Loaded">

    <Viewbox Stretch="Fill">
        <Grid Height="768" Width="1054" Opacity="100" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="33"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!--Row 0-->
            <Button x:Name="ConnectBtn" Content="Create WIFI AP" Click="Button_Click" />
            <Button x:Name="CreateServer" Content="CreateTCPserver" Grid.Column="2" Click="CreateServer_Click"/>
            <Button x:Name="SendMessage" Content="SendMessage" Grid.Column="4" Click="SendMessage_Click" />


            <!--Row 1-->
            <Label x:Name="ConnectionStatusLbl" Grid.Row="1" Grid.Column="1" Content="0.0.0.0" Width="120"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Selected IP"/>
            <Label Content="ServerStatus:" Grid.Row="1" Grid.Column="2"/>
            <Label x:Name="LblServerStatus" Grid.Row="1" Grid.Column="3" Width="200"/>
            <TextBox x:Name="SendmessageTextB" Grid.Row="1" Grid.Column="4" Width="100"/>

            <!--Row 2-->
            <DataGrid x:Name="lstLocal" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Width="340" IsReadOnly="True" AutoGenerateColumns="True"  SelectionChanged="LstLocal_SelectionChanged" ItemsSource="{Binding NetworkDevicesp}" CanUserAddRows="False"/>
            <Label x:Name="LocalIpsCount" Grid.Row="2" Grid.Column="3"/>
            <Label x:Name="ConnectedDevicesCount" Grid.Row="3" Grid.Column="3"/>
            <Label x:Name="selectedIP" Grid.Row="3" Grid.Column="4"/>
            <DataGrid x:Name="ConnectedDevices" Grid.Row="2" Grid.Column="4" CanUserAddRows="False" IsReadOnly="True" AutoGenerateColumns="True" ItemsSource="{Binding TCPclients}" SelectionChanged="ConnectedDevices_SelectionChanged"/>
            <CheckBox x:Name="Broadcast" Grid.Row="2" Grid.Column="5" Checked="Broadcast_Checked" Unchecked="Broadcast_Unchecked" />

            <!--Row 3-->
            <ListView x:Name="MessagesGet" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Stretch" Grid.RowSpan="2" Margin="0,0,0,-609" />
            <DataGrid x:Name="CommanderParametersGrid" Grid.Column="6" HorizontalAlignment="Left" Height="748" Margin="0,10,0,-604" Grid.RowSpan="5" VerticalAlignment="Top" Width="387"/>

        </Grid>
    </Viewbox>
</Window>
